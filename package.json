{
  "name": "wordpress-git-publisher-backend",
  "version": "1.0.0",
  "description": "Backend dla automatycznego generowania i publikowania artykułów WordPress na podstawie aktywności Git",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "npm run test:unit",
    "test:unit": "jest",
    "lint": "eslint .",
    "setup": "npm install && npm run check-requirements"
  },
  "keywords": [
    "wordpress",
    "git",
    "ollama",
    "ai",
    "automation",
    "blog",
    "publisher"
  ],
  "author": "Developer",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "testMatch": ["**/tests/**/*.test.js"],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "transform": {},
    "testPathIgnorePatterns": ["<rootDir>/node_modules/", "<rootDir>/.next/"]
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/wordpress-git-publisher.git"
  }
}
